@model Borrow.Models.Views.Item.RemoveItemsViewModel

@{
    ViewData["Title"] = "RemoveItems";
}

<h1>RemoveItems</h1>

<h4>Item</h4>
<hr />
<div class="row">
    <div>
        <table style="width:100%">
            <tr>
                <th></th>
                <th>Item</th>
                <th>Description</th>
                <th>Owned Since</th>
                <th>Available</th>
                <th>Daily Rate</th>
                <th>Weekly Rate</th>
            </tr>
            @foreach (var item in @Model.Items)
            {
                <tr>
                    <td><input type="checkbox" name="SelectedItems" value ="@item"/></td>
                    <td>@item.Name</td>
                    <td>@item.Description</td>
                    <td>@item.OwnedSince</td>
                    <td>@item.Available.ToString()</td>
                    <td>@item.DailyRate.ToString()</td>
                    <td>@item.WeeklyRate.ToString()</td>
                </tr>
            }
        </table>
    </div>
</div>

