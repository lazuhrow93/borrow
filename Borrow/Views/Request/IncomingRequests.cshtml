@model UserBorrowRequestsViewModel

<h1>Here are your incoming Requests</h1>
<div>
    <div>
        <table style="width:100%">
            <tr>
                <th>Item</th>
                <th>Requested Created</th>
                <th>Requested Rate</th>
                <th>Counter Rate</th>
                <th>Status</th>
                <th>Action</th>
                <th></th>
            </tr>
            @for (int i = 0; i < Model.Incoming.Count(); ++i)
            {
                var item = Model.Incoming[i];
                <tr>
                    <td>
                        @item.ItemName
                    </td>
                    <td>
                        @item.CreatedDateUtc
                    </td>
                    <td>
                        @item.RateView
                    </td>
                    <td>
                        @item.Status
                    </td>

                    <td>
                        @if (item.OwnerNeedsAction())
                        {
                            if (!item.Status.Equals(Request.RequestStatus.Accepted))
                            {
                                @using (Html.BeginForm("AcceptRequest", "Request", FormMethod.Get))
                                {
                                    <button class="btn btn-primary" type="submit" name="requestId" value=@item.RequestId>Accept Offer?</button>
                                }
                            }
                            else if (item.Status.Equals(Request.RequestStatus.Accepted))
                            {
                                @using (Html.BeginForm("MeetUpSpot", "Request", FormMethod.Get))
                                {
                                    <button class="btn btn-primary" type="submit" name="requestId" value=@item.RequestId>Meeting Spot!</button>
                                }
                            }
                        }
                        else
                        {
                            @using (Html.BeginForm("ViewRequestInfo", "Request", FormMethod.Get))
                            {
                                <button class="btn btn-primary" type="submit" name="requestId" value=@item.RequestId>View Request Information</button>
                            }
                        }
                    </td>
                </tr>
            }
        </table>
    </div>
</div>