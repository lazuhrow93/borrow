@model UserBorrowRequestsViewModel

<h1>Here are your incoming Requests</h1>
<div>
    <div>
        <table style="width:100%">
            <tr>
                <th>Item</th>
                <th>Requested Created</th>
                <th>Status</th>
                <th>Action</th>
                <th></th>
            </tr>
            @for (int i = 0; i < Model.Incoming.Count(); ++i)
            {
                var item = Model.Incoming[i];
                <tr>
                    <td>
                        @item.Item
                    </td>
                    <td>
                        @item.CreatedDateUtc
                    </td>
                    <td>
                        @item.Status
                    </td>

                    <td>
                        @using (Html.BeginForm("ViewRequestInfo", "Request", FormMethod.Get))
                        {
                            <button class="btn btn-primary" type="submit" name="requestId" value=@item.Id>View Request Information</button>
                        }
                    </td>
                </tr>
            }
        </table>
    </div>
</div>