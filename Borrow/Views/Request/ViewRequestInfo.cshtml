@model Borrow.Models.Views.TableViews.RequestViewModel

@{
    ViewData["Title"] = "Index";
}

<h1>Current Request</h1>
<div>
    <h4>Here is your Request</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ItemName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ItemName)
        </dd>
        <dt class="col-sm-2">
            Requested Rate:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.RateView)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CreatedDateUtc)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CreatedDateUtc)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Status)
        </dd>
    </dl>
</div>
<div>
    @using (Html.BeginForm("CounterOffer", "Request", FormMethod.Get))
    {
        <button class="btn btn-primary" type="submit" name="requestId" value=@Model.RequestId>Counter?</button>
    }
    @using (Html.BeginForm("Accept", "Request", FormMethod.Get))
    {
        <button class="btn btn-primary" type="submit" name="requestId" value=@Model.RequestId>Accept?</button>
    }
    
</div>
<hr />
