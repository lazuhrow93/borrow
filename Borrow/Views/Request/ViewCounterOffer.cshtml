@model Borrow.Models.Views.TableViews.RequestViewModel

@{
    ViewData["Title"] = "Index";
}

@if (Model.Status.Equals(Request.RequestStatus.OwnerCounter))
{
    <h1>@Model.OwnerUserName suggests a different rate:</h1>
}
else
{
    <h1>The Requester suggests a different rate:</h1>
}
<div>
    <h4>Here is your Request</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ItemName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ItemName)
        </dd>
        <dt class="col-sm-2">
            Counter Rate:
        </dt>
        <dd class="col-sm-10">
            @if (Model.Status.Equals(Request.RequestStatus.OwnerCounter))
            {
                @Html.DisplayFor(model => model.CounterRateView)
            }
            else
            {
                @Html.DisplayFor(model => model.RateView)
            }
        </dd>
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Status)
        </dd>
    </dl>
</div>
<div>
    @using (Html.BeginForm("AcceptOffer", "Request", FormMethod.Get))
    {
        <button class="btn btn-primary" type="submit" name="requestId" value=@Model.RequestId>Accept?</button>
    }
    @if (Model.Status.Equals(Request.RequestStatus.OwnerCounter))
    {
        @using (Html.BeginForm("CounterOffer", "Request"))
        {
            <button class="btn btn-primary" type="submit" name="requestId" value=@Model.RequestId>Counter?</button>
        }
    }
    else
    {
        @using (Html.BeginForm("RequesterCounterOffer", "Request"))
        {
            <button class="btn btn-primary" type="submit" name="requestId" value=@Model.RequestId>Counter?</button>
        }
    }
    @using (Html.BeginForm("DeclineRequest", "Request", FormMethod.Post))
    {
        <button class="btn btn-primary" type="submit" name="requestId" value=@Model.RequestId>Counter?</button>
    }
</div>
<hr />
