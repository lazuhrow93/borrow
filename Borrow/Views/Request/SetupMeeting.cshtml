@model Borrow.Models.Views.Requests.SetupMeetingViewModel
@{
    ViewData["Title"] = "Set Up Meeting";
}

<h1>When do you want to meet up with @Model.Lender?</h1>
<hr/>
<div asp-validation-summary="ModelOnly" class="text-danger"></div>
<form method="post" asp-action="SubmitRequestForListing">
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.MeetUpTime)
        </dt>
        <dd class="col-sm-10">
            <input asp-for="@Model.MeetUpTime" class="form-control" />
        </dd>
    </dl>
    <div class="row">
        <div class="offset-2 col-sm-4">
            <button type="submit" class="btn btn-primary">Submit Meetup Time</button>
        </div>
    </div>
    @Html.HiddenFor(model=>model.RequestId);
</form>

