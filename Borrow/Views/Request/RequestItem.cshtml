@model Borrow.Models.Views.TableViews.RequestViewModel
@{
    ViewBag.Title = "Register";
}

<h1>Register</h1>
<div asp-validation-summary="ModelOnly" class="text-danger"></div>
<form method="post" asp-action="RequestItem">
    <div class="form-group row">
        <div class="col-sm-2"><label>First Name:</label></div>
        <div class="col-sm-4">
            <select asp-for="Type" asp-items="Html.GetEnumSelectList<Request.RequestType>()" class="form-control" />
        </div>
        <div class="col">
            <span asp-validation-for="Type"
                  class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-2"><label>Last Name:</label></div>
        <div class="col-sm-4">
            <input asp-for="Rate" class="form-control" />
        </div>
        <div class="col">
            <span asp-validation-for="Rate"
                  class="text-danger"></span>
        </div>
    </div>
    <div class="row">
        <div class="offset-2 col-sm-4">
            <button type="submit" class="btn btn-primary">Subimt Offer</button>
        </div>
    </div>
</form>