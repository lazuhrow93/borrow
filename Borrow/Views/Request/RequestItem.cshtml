@model Borrow.Models.Views.TableViews.Create.CreateRequestViewModel
@{
    ViewData["Title"] = "Requets Item";
}

<h1>Create your Request for the item @Model.ItemName</h1>
<div asp-validation-summary="ModelOnly" class="text-danger"></div>
<form method="post" asp-action="RequestItem">
    <div class="form-group row">
        <div class="col-sm-2"><label>Return Date:</label></div>
        <div class="col-sm-4">
            <input asp-for="@Model.ReturnDateUtc" class="form-control" />
        </div>
        <div class="col">
            <span asp-validation-for="@Model.ReturnDateUtc" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-2"><label>RequestType:</label></div>
        <div class="col-sm-4">
            <select asp-for="RequestType" asp-items="Html.GetEnumSelectList<Request.RequestType>()"></select>
        </div>
        <div class="col">
            <span asp-validation-for="@Model.RequestType" class="text-danger"></span>
        </div>
    </div>
    <div class="row">
        <div class="offset-2 col-sm-4">
            <button type="submit" class="btn btn-primary">Submit Request</button>
        </div>
    </div>
    @Html.HiddenFor(m=>m.ItemId);
</form>
