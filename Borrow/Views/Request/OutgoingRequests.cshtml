@model UserBorrowRequestsViewModel

<h1>Here are your outgoing Requests</h1>
<div>
    <div>
        <table style="width:100%">
            <tr>
                <th>Item</th>
                <th>Requested Rate</th>
                <th>Counter Rate</th>
                <th>Owner</th>
                <th>Status</th>
                <th>Requested Created</th>
                <th>Action</th>
                <th></th>
            </tr>
            @for (int i = 0; i < Model.Outgoing.Count(); ++i)
            {
                var item = Model.Outgoing[i];
                <tr>
                    <td>
                        @item.ItemName
                    </td>
                    <td>
                        @item.RateView
                    </td>
                    <td>
                        @item.CounterRateView
                    </td>
                    <td>
                        @item.OwnerUserName
                    </td>
                    <td>
                        @item.Status
                    </td>
                    <td>
                        @item.CreatedDateUtc
                    </td>
                    
                    <td>
                        @if (item.RequesterNeedsAction())
                        {
                            if (item.Status.Equals(Request.RequestStatus.OwnerCounter))
                            {
                                @using (Html.BeginForm("ViewCounterOffer", "Request", FormMethod.Get))
                                {
                                    <button class="btn btn-primary" type="submit" name="requestId" value=@item.RequestId>@item.OwnerUserName's CounterOffer</button>
                                }
                            }
                            else if (item.Status.Equals(Request.RequestStatus.Accepted))
                            {
                                @using (Html.BeginForm("MeetUpSpot", "MeetUp", FormMethod.Get))
                                {
                                    <button class="btn btn-primary" type="submit" name="requestId" value=@item.RequestId>Meet</button>
                                }
                            }
                        }
                    </td>
                </tr>
            }
        </table>
    </div>
</div>