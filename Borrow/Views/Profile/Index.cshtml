@model Borrow.Models.Views.ProfileViewModel

@{
    ViewData["Title"] = "Index";
}

<h1>Profile</h1>
<div>
    <h4>Hello, @Model.FirstName @Model.LastName</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Username)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Username)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.FirstName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FirstName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.LastName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.LastName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Exchanges)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Exchanges)
        </dd>
    </dl>
</div>
<hr />

<div>
    <div>
        <h1>Your Listings</h1>
        <a asp-action ="Index" asp-controller="AddItem">
            <button class="btn btn-primary">Add Item</button>
        </a>
        <a asp-action="Index" asp-controller="RemoveItems">
            <button class="btn btn-primary">Remove Item</button>
        </a>
    </div>
    <div>
        <table style="width:100%">
            <tr>
                <th>Item</th>
                <th>Description</th>
                <th>Owned Since</th>
                <th>Available</th>
                <th>Daily Rate</th>
                <th>Weekly Rate</th>
            </tr>
            @for (int i = 0; i < Model.OwnerItems.Count(); ++i)
            {
                var item = Model.OwnerItems[i];
                <tr>
                    <td>
                        @item.Name
                    </td>
                    <td>
                        @item.Description
                    </td>
                    <td>
                        @item.OwnedSince
                    </td>
                    <td>
                        @item.Available
                    </td>
                    <td>
                        @item.DailyRate
                    </td>
                    <td>
                        @item.WeeklyRate
                    </td>
                </tr>
            }
        </table>
    </div>
</div>

