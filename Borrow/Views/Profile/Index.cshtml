@model Borrow.Models.Views.ProfileViewModel

@{
    ViewData["Title"] = "Index";
}

<h1>Profile</h1>
<div>
    <h4>Hello, @Model.FirstName @Model.LastName</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Username)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Username)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.FirstName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FirstName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.LastName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.LastName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Exchanges)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Exchanges)
        </dd>
    </dl>
</div>
<hr />

<div>
    <div>
        <h1>Your Listings</h1>
        <a asp-action ="Index" asp-controller="AddItem">
            <button class="btn btn-primary">Add Item</button>
        </a>
        <a asp-action="Index" asp-controller="RemoveItems">
            <button class="btn btn-primary">Remove Item</button>
        </a>
    </div>
    <div>
        <table style="width:100%">
            <tr>
                <th style="width:33%">Item</th>
                <th style="width:33%">Owned Since</th>
                <th style="width:33%">Available</th>
            </tr>
            @foreach (var item in @Model.OwnerItems)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.OwnedSince</td>
                    <td>@item.Available.ToString()</td>
                </tr>
            }
        </table>
    </div>
</div>

