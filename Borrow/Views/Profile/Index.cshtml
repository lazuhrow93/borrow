@model Borrow.Models.Views.ProfileViewModel

@{
    ViewData["Title"] = "Index";
}

<h1>Profile</h1>
<div>
    <h4>Hello, @Model.FirstName @Model.LastName</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Username)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Username)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.FirstName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FirstName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.LastName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.LastName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Exchanges)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Exchanges)
        </dd>
    </dl>
</div>

<div>
    <h1>Your Listing</h1>
    <div>
        <table>
            <tr>
                <th>Name</th>
                <th>Age</th>
                <th>Available</th>
            </tr>
            @foreach (var item in @Model.OwnerItems)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Age</td>
                    <td>@item.Available.ToString()</td>
                </tr>
            }
        </table>
    
    </div>
</div>

