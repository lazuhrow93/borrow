@model ReviewListingsViewModel

@{
    ViewData["Title"] = "RemoveItems";
}

<h1>RemoveItems</h1>

<h4>Item</h4>
<hr />
<div class="row">
    <form method="post" asp-action="Remove" asp-controller="Profile">
        <div>
            <table style="width:100%">
                <tr>
                    <th></th>
                    <th>Item</th>
                    <th>Description</th>
                    <th>Owned Since</th>
                    <th>Available</th>
                    <th>Daily Rate</th>
                    <th>Weekly Rate</th>
                </tr>
                @for(int i = 0; i<Model.Items.Count(); ++i)
                {
                    var item = Model.Items[i];
                    
                    @Html.HiddenFor(m=>m.Items[i].ItemId)
                    <tr>
                        <td>
                            @Html.CheckBoxFor(m=>m.Items[i].IsSelected)
                        </td>
                        <td>
                            @item.Name
                        </td>
                        <td>
                            @item.Description
                        </td>
                        <td>
                            @item.OwnedSince
                        </td>
                        <td>
                            @item.Available
                        </td>
                        <td>
                            @item.DailyRate
                        </td>
                        <td>
                            @item.WeeklyRate
                        </td>
                    </tr>
                }
            </table>
            <button class="btn btn-primary" type="submit">Delete Selected</button>
        </div>
    </form>
</div>

