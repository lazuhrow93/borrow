@model Borrow.Models.Views.Profile.DeleteItemsViewModel

@{
    ViewData["Title"] = "Delete Items";
}

<h1>RemoveItems</h1>

<h4>Item</h4>
<hr />
<div class="row">
    <form method="post" asp-action="DeleteItems" asp-controller="Profile">
        <div>
            <table style="width:100%">
                <tr>
                    <th></th>
                    <th>Item</th>
                    <th>Description</th>
                    <th>Owned Since</th>
                    <th>Available</th>
                </tr>
                @for(int i = 0; i<Model.ItemViewModels.Count(); ++i)
                {
                    var item = Model.ItemViewModels[i].Entity;

                    @Html.HiddenFor(m=>m.ItemViewModels[i].Entity.ItemId)
                    <tr>
                        <td>
                            @Html.CheckBoxFor(m=>m.ItemViewModels[i].IsSelected)
                        </td>
                        <td>
                            @item.Name
                        </td>
                        <td>
                            @item.Description
                        </td>
                        <td>
                            @item.OwnedSince
                        </td>
                        <td>
                            @item.Available
                        </td>
                    </tr>
                }
            </table>
            <button class="btn btn-primary" type="submit" disabled="@(Model.ItemViewModels.Count() == 0)">Delete Selected</button>
        </div>
    </form>
</div>

