        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ItemViewModel.DailyRate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ItemViewModel.WeeklyRate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ItemViewModel.WeeklyRate)
