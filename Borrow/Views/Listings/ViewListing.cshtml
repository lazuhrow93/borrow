@{
}
<h1>Listing Info</h1>
<div>
    <h4>@Model.ItemViewModel.Name</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ItemViewModel.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ItemViewModel.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ItemViewModel.DailyRate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ItemViewModel.DailyRate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ItemViewModel.WeeklyRate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ItemViewModel.WeeklyRate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ItemViewModel.Available)
        </dt>
        <dd class="col-sm-10">
            @if (Model.ItemViewModel.Available)
            {
                <label>Yes</label>
            }
            else
            {
                <label>No</label>
            }
        </dd>
    </dl>
</div>
<a asp-action="NeighborhoodListings" asp-controller="Listings">
    <button class="btn btn-primary">Back</button>
</a>
@using (Html.BeginForm("RequestItem", "Request", FormMethod.Post))
{
    <button class="btn btn-primary" type="submit" name="Identifier" value=@Model.ItemViewModel.Identifier>Request to Borrow!</button>
}
<hr />